    <script type="text/javascript">
        $(function () {
            $(".connectedSortable").sortable({
                placeholder: "sort-highlight",
                connectWith: ".connectedSortable",
                handle: ".box-header, .nav-tabs",
                forcePlaceholderSize: true,
                zIndex: 999999
            });
            $(".connectedSortable .box-header, .connectedSortable .nav-tabs-custom").css("cursor", "move");
        });
    </script>
    <script type="text/javascript">
        //Create the box manager
        $(function () {
            function boxManagerSetup() {
                if (typeof dric.box === 'undefined') {
                    dric.box = new Object();
                }
                dric.box.home = new dric.BoxManager('.home-boxes');
                dric.box.net = new dric.BoxManager('.network-boxes');
                dric.box.plugins = new dric.BoxManager('.plugins-boxes');
            }
            boxManagerSetup();
            //add event lsitener to sidebar
            function click(e) {
                e.preventDefault();

                //Change active link
                $('.main-sidebar .active').removeClass('active');
                $(e.target).parents('li').addClass('active');

                //switch page
                var page = $(e.target).attr('data-page') || $(e.target).parents('[data-page]').attr('data-page');
                if (typeof page !== 'undefined') {
                    $('.page').hide();
                    var $page = $('#' + page);
                    $page.show();
                    if (typeof $page.attr('data-on-after-show') !== 'undefined') {
                        window[$page.attr('data-on-after-show')]($page);
                    }
                }
            }
            $('.sidebar-menu').on('click', 'li:not(.treeview) > a', click)
        });
    </script>

