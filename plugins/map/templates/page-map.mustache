<section class="content body page" id="page-map" data-on-after-show="page_map_after_show" hidden>
    <div class="row">
        <div id="dric-map">

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!-- START .box-body -->

            <div class="form-group col-md-3">
                <label>Choose a map tile</label>
                <select class="form-control map-select-tiles"></select>
            </div>
            <div class="form-group col-md-3">
                <label>Map tools</label>
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-default"><input type="radio" name="options" id="map-toolbar-cursor" checked="checked"><i class="fa fa-mouse-pointer"></i></label>
                        <label class="btn btn-default"><input type="radio" name="options" id="map-toolbar-waypoint"><i class="fa fa-map-marker"></i></label>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3">
                <label>Waypoints</label>
                <select multiple="" class="form-control" id="map-select-waypoint"></select>
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group" data-toggle="buttons">
                        <button class="btn btn-default waypoint-control" id="map-delete-waypoint" disabled>
                            <i class="fa fa-trash"></i>
                        </button>
                        <button class="btn btn-default waypoint-control map-order-waypoint" data-direction="down" disabled>
                            <i class="fa fa-arrow-down"></i>
                        </button>
                        <button class="btn btn-default waypoint-control map-order-waypoint" data-direction="up" disabled>
                            <i class="fa fa-arrow-up"></i>
                        </button>
                    </div>
                    <a title="download" class="map-save-waypoints btn btn-default"><i class="fa fa-download"></i></a>
                    <label>
                        <a role="button" class="btn btn-default" title="Upload"><i class="fa fa-upload"></i></a>
                        <input id="map-waypoints-file" style="display:none" type="file">
                    </label>                    
                </div>
            </div>
            <div class="col-md-3 form-horizontal" id="map-waypoint-editor">
                <div class="form-group">
                    <label>No waypoint selected</label>
                </div>
                <div class="form-group">
                    <label class="col-sm-3">Hold [s]:</label>
                    <input class="col-sm-9 waypoint-control" type="text" name="hold" disabled>
                </div>
                <div class="form-group">
                    <label class="col-sm-3">Radius [m]:</label>
                    <input class="col-sm-9 waypoint-control" type="text" name="radius" disabled>
                </div>
                <div class="form-group">
                    <label class="col-sm-3">Trajectory:</label>
                    <input class="col-sm-9 waypoint-control" type="text" name="trajectory" disabled>
                </div>
                <div class="form-group">
                    <label class="col-sm-3">Yaw [deg]:</label>
                    <input class="col-sm-9 waypoint-control" type="text" name="yaw" disabled>
                </div>
                <div class="form-group">
                    <label class="col-sm-3">Latitude:</label>
                    <input class="col-sm-9 waypoint-control" type="text" name="latitude" disabled>
                </div>
                <div class="form-group">
                    <label class="col-sm-3">Longitude:</label>
                    <input class="col-sm-9 waypoint-control" type="text" name="longitude" disabled>
                </div>
                <div class="form-group">
                    <label class="col-sm-3">Altitude:</label>
                    <input class="col-sm-9 waypoint-control" type="text" name="altitude" disabled>
                </div>
                <div class="form-group">
                    <input class="col-sm-12 btn btn-default waypoint-control" type="submit" value="set" disabled>
                </div>
            </div>
        </div> <!-- END .box-body -->
    </div>
</section>