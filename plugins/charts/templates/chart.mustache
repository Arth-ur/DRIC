<div id="vapp-charts">
    <div style="width:100%; height:400px" id="samples-chart"
         v-on:mousewheel="zoom"
         v-on:mousemove="pan"
         v-on:mousedown="mousedown"
         v-on:mouseup="mouseup"
         v-on:mouseexit="mouseup"
         v-on:mouseenter="mouseup"
         v-bind:style="{cursor: cursor}">
    </div>
    <div class="btn-group">
        <button class="btn btn-default" data-toggle="button" title="Pause" v-on:click="pause"><i class="fa fa-pause"></i></button>
        <button class="btn btn-default" title="Clear" v-on:click="clear"><i class="fa fa-eraser"></i></button>
    </div>
    <div class="btn-group">
        <button class="btn btn-default" title="Zoom auto" v-on:click="zoomAuto"><i class="fa fa-arrows-alt"></i></button>
        <button class="btn btn-default" title="Zoom +" v-on:click="zoomPlus"><i class="fa fa-search-plus"></i></button>
        <button class="btn btn-default" title="Zoom -" v-on:click="zoomMinus"><i class="fa fa-search-minus"></i></button>
    </div>
    <div class="btn-group">
        <button class="btn btn-default refresh-chart-source-tree-button" title="Reload list"><i class="fa fa-refresh"></i></button>
    </div>
    <span class="form-inline">
        <span class="form-group">
            <input class="form-control search-chart-source-tree" type="text" placeholder="Search for time serie" />
        </span>
        <span class="form-group pull-right">
            <label>X axis</label>
            <select class="form-control x-axis-zoom" v-model="xaxis">
                <option value="10">10 seconds</option>
                <option value="20">20 seconds</option>
                <option value="30">30 seconds</option>
                <option value="40">40 seconds</option>
                <option value="50">50 seconds</option>
                <option value="60">1 minute</option>
                <option value="120">2 minutes</option>
                <option value="180">3 minutes</option>
                <option value="300">5 minutes</option>
                <option value="600">10 minutes</option>
                <option value="1200">20 minutes</option>
            </select>
        </span>
    </span>
    <div class="chart-source-tree">
    </div>
</div>